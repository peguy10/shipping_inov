<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_folder_transit">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <div class="page">
                <h2 class="mt-4">Product List</h2>
                <div class="row mt-4 mb-2" id="product_information">
                    <div class="col-12">
                        <table class="table table-sm o_main_table table-borderless mt-4">
                            <thead>
                                <tr>
                                    <th class="text-start">Product Name</th>
                                    <th class="text-end">Quantity</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.order_line" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-field="line.product_id.name"/>
                                        </td>

                                        <td class="text-end">
                                            <span t-field="line.product_uom_qty">0</span>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.price_unit">0.00</span>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.price_subtotal">0.00</span>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="report_product_list_raw">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="report_product_list_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <template id="report_product_list">
        <t t-call="report_product_list_raw"/>
    </template>

    <template id="report_product_list_pro_forma">
        <t t-call="web.html_container">
            <t t-set="is_pro_forma" t-value="True"/>
            <t t-set="docs" t-value="docs.with_context(proforma=True)"/>
            <t t-foreach="docs" t-as="doc">
                <t t-call="report_product_list_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <!-- Allow edits (e.g. studio) without changing the often inherited base template -->
    <template id="document_tax_totals" inherit_id="account.document_tax_totals_template" primary="True"></template>
</odoo>
